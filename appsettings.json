{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=CourseManagerDB;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true",
    "ProductionConnection": "Server=your-sql-server;Database=CourseManagerDB;User Id=your-username;Password=your-password;TrustServerCertificate=true",
    "Redis": "localhost:6379"
  },
  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyThatIsAtLeast32CharactersLong!",
    "Issuer": "CourseManagerAPI",
    "Audience": "CourseManagerUsers",
    "ExpiryInMinutes": 60
  },
  "MoMoPayment": {
    "PartnerCode": "MOMO_PARTNER_CODE",
    "AccessKey": "MOMO_ACCESS_KEY",
    "SecretKey": "MOMO_SECRET_KEY",
    "Endpoint": "https://test-payment.momo.vn/v2/gateway/api/create",
    "ReturnUrl": "https://your-domain.com/payment/return",
    "NotifyUrl": "https://your-domain.com/api/payments/momo/notify"
  },
  "RateLimiting": {
    "MaxRequests": 100,
    "TimeWindowMinutes": 1
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "GroupId": "coursemanager-group",
    "ClientId": "coursemanager-client",
    "EnableAutoCommit": true,
    "AutoCommitIntervalMs": 1000,
    "SessionTimeoutMs": 30000,
    "RequestTimeoutMs": 30000,
    "RetryBackoffMs": 100,
    "MaxRetryAttempts": 3,
    "SecurityProtocol": "PLAINTEXT"
  },
  "KafkaTopics": {
    "OrderEvents": "order-events",
    "PaymentEvents": "payment-events",
    "CourseEvents": "course-events",
    "UserEvents": "user-events",
    "SystemEvents": "system-events",
    "Notifications": "notifications",
    "AuditLogs": "audit-logs",
    "EmailQueue": "email-queue",
    "SmsQueue": "sms-queue",
    "PushNotifications": "push-notifications"
  },
  "SignalR": {
    "EnableDetailedErrors": false,
    "MaximumReceiveMessageSize": 32768,
    "StreamBufferCapacity": 10,
    "ClientTimeoutInterval": 30,
    "KeepAliveInterval": 15,
    "HandshakeTimeout": 15,
    "EnableCompression": true,
    "UseRedisBackplane": false
  },
  "Realtime": {
    "EnableSignalR": true,
    "EnableKafka": true,
    "EnableWebSockets": true,
    "EnableServerSentEvents": false,
    "MaxConnectionsPerUser": 5,
    "MaxGroupsPerUser": 10,
    "NotificationRetentionDays": 30,
    "EnableNotificationPersistence": true,
    "EnableEventSourcing": false
  },
  "PermissionCache": {
    "DefaultExpiry": "01:00:00",
    "UserPermissionExpiry": "02:00:00",
    "RolePermissionExpiry": "04:00:00",
    "MenuPermissionExpiry": "06:00:00",
    "MaxCacheSize": 10000,
    "EnableCompression": true,
    "EnableStatistics": true,
    "KeyPrefix": "coursemanager:permissions:"
  },
  "Elasticsearch": {
    "BaseUrl": "http://localhost:9200",
    "Username": "",
    "Password": "",
    "CertificateFingerprint": "",
    "EnableSsl": false,
    "VerifySsl": true,
    "TimeoutSeconds": 30,
    "MaxRetries": 3,
    "RetryDelaySeconds": 1,
    "NumberOfShards": 1,
    "NumberOfReplicas": 1,
    "MaxBulkSize": 1000,
    "MaxBulkBytes": 10485760,
    "EnableCompression": true,
    "EnableSniffing": false,
    "NodeUrls": [],
    "DefaultSettings": {},
    "IndexTemplates": {},
    "EnableLogging": true,
    "LogLevel": "Information"
  },
  "Microservices": {
    "CourseService": {
      "BaseUrl": "http://localhost:5001",
      "HealthCheckUrl": "http://localhost:5001/health"
    },
    "OrderService": {
      "BaseUrl": "http://localhost:5002",
      "HealthCheckUrl": "http://localhost:5002/health"
    },
    "AuthService": {
      "BaseUrl": "http://localhost:5003",
      "HealthCheckUrl": "http://localhost:5003/health"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/coursemanager-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}

